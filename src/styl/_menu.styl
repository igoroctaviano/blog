*, *:before, *:after
    -moz-box-sizing border-box
    -webkit-box-sizing border-box
    box-sizing border-box

body
  left 0
  right 0
  margin auto

a, aside, .overlay, body
    transition all .25s ease
a.slideButton, .dosearch
    position fixed
    display block
    width 40px
    height 40px
    top 10px
    z-index 17
.slideButton
    right 60px
.dosearch
    right 10px
    border-radius rem(3px)
    padding rem(2px) rem(3px)
.icon-menu
    cursor pointer
    padding rem(5px)
    border-radius rem(3px)
    width rem(40px)
    height rem(40px)
    fill sec
.icon-search
    width rem(30px)
    height rem(30px)

.overlay
    cursor pointer

#close
    display none
    fill sec

aside
    position fixed
    height 100%
    width rem(240px)
    padding rem(15px) 0 0
    top 0
    right rem(-240px)
    background-color mainGreen
    z-index 20
    box-shadow inset -10px -1px 15px -9px rgba(0,0,0,0.5)
    h2
        text-align center
        margin 0 0 rem(10px)
        mainFont(800)
        font-size rem(25px)
        color sec
    nav
        padding: 25px
        ul
            padding 0
        li
            font-size rem(33px)
            margin 0
            list-style-type none
            a
                width 100%
                display block
                padding rem(14px)
                text-decoration none
                mainFont(300)
                color sec
                &:hover
                    color mainBlue !important
    &.slide
        right 0


.slide #close
    right rem(250px)
    position fixed
    pointer-events none

.overlay
    position fixed
    width 100%
    height 100%
    top 0
    right 0
    pointer-events none
    background transparent
    z-index 17
    &.slide
        pointer-events auto
        right 240px
        background rgba(0,0,0,.6)